{
	"compilerOptions": {
		"target": "ES5",
		"lib": [
			"dom",
			"dom.iterable",
			"ESNext",
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"module": "ESNext"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
	],
	"exclude": [
		"node_modules",
	],
}
